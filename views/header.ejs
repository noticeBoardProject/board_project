<!-- 로그인 모달창 -->
<div class="form-login-box">
  <div class="login-close">
    <button class="close-btn"><img src="/public/image/back.svg" alt="back" /></button>
    <div>로그인</div>
  </div>
  <form>
    <input oninput="emailValidCheck()" type="email" class="form-login" id="email" placeholder="아이디" />
    <div class="emailtext"></div>
    <input oninput="checkpw()" type="password" class="form-login" id="pw" placeholder="비밀번호" />
    <span class="password-container-login" onclick="togglePassword('pw','.toggle-password-login')">
      <img class="toggle-password-login" src="/public/image/visibilityoff.svg" />
    </span>
    <div class="passtext"></div>
    <div class="login-find-flex">
      <label>
        <input class="check" type="checkbox" id="stayLogin" />로그인 상태 유지
      </label>
      <!-- <a href="/">ID 찾기</a> -->
    </div>
    <button class="login-btn" onclick="login(event)">로그인</button>
  </form>

  <div class="signup-link">
    <span>아직 회원이 아니신가요?</span> <a href="/signup">회원가입하기</a>
  </div>

</div>
