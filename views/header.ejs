<!-- 검색창 모달 -->
<div class="search-wrap">
  <div class="search-header">
    <div class="logobox"><img src="/public/image/logo.png"></div>
    <div class="close-search">
      <div class="close"><img src="/public/image/delete.png" alt="deletebtn"></div>
    </div>
  </div>

  <div class="form">
    <div class="form-box">
      <input oninput="checkSearch()" type="text" id="search" placeholder="검색" title="검색" />
      <div class="search-box">
        <button class="deltebtn" onclick="deleteKeyword()">X</button>
        <img class="search-btn" src="/public/image/search.png">
      </div>
    </div>
  </div>
</div>

<!-- 헤더 -->
<header id="main-header">
  <div class="headerwrap">
    <div class="logobox"><img src="/public/image/logo.png"></div>
    <div class="headerbox">
      <div class="searchicon" onclick="searchModal()"><img src="/public/image/search.png"></div>
      <div class="loginbox">
        <div class="loginicon" onclick="loginModal()">
          로그인
        </div>
      </div>
    </div>
